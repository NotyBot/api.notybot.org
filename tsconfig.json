{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "config/*": [
        "./config/*"
      ],
      "contracts/*": [
        "./contracts/*"
      ],
      "database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/ally",
      "@adonisjs/mail",
      "@adonisjs/view",
      "@adonisjs/redis",
      "@setten/bull-queue"
    ]
  }
}
